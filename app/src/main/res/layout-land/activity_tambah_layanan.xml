<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layanan.TambahLayanan"
    android:background="#075e54">

    <TextView
        android:id="@+id/tv_title_layanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/interblack"
        android:padding="10dp"
        android:text="TAMBAH LAYANAN"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nama_layanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter"
        android:text="@string/card_layanan_nama"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_layanan" />

    <EditText
        android:id="@+id/et_nama_layanan"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_et"
        android:fontFamily="@font/inter"
        android:hint="@string/card_layanan_nama"
        android:textColor="@color/black"
        android:autofillHints="name"
        android:textSize="12sp"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nama_layanan" />

    <TextView
        android:id="@+id/tv_harga_layanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter"
        android:text="@string/harga_layanan_main_card"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_nama_layanan" />

    <EditText
        android:id="@+id/et_harga_layanan"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_et"
        android:fontFamily="@font/inter"
        android:hint="@string/harga_layanan_main_card"
        android:textColor="@color/black"
        android:autofillHints="postalAddress"
        android:textSize="12sp"
        android:inputType="textPostalAddress"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_harga_layanan" />

    

    <TextView
        android:id="@+id/tv_cabang_layanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter"
        android:text="@string/card_pelanggan_cabang"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_harga_layanan" />

    <EditText
        android:id="@+id/et_cabang_layanan"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_et"
        android:fontFamily="@font/inter"
        android:hint="@string/card_pelanggan_cabang"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:autofillHints="organization"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cabang_layanan" />

    <Button
        android:id="@+id/btn_simpan_pegawai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/interextrabold"
        android:text="@string/button_simpan"
        android:backgroundTint="#25d366"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_cabang_layanan" />

</androidx.constraintlayout.widget.ConstraintLayout>