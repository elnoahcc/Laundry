<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layanan.TambahLayanan"
    android:padding="30dp"
    android:background="#075e54">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textjudul"
        android:text="LAYANAN LAUNDRY"
        android:textAlignment="center"
        android:padding="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/interblack"
        android:textSize="30dp"
        tools:ignore="MissingConstraints" />


    <!-- CardView untuk Layanan Setrika -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvsetrika"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/textjudul"
        android:backgroundTint="#128c7e"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setrika"
                android:fontFamily="@font/interextrabold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Layanan setrika pakaian"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 10.000/kg"
                android:textColor="@color/white"
                android:fontFamily="@font/inter"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView untuk Layanan Cuci Biasa -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cucibiasa"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:backgroundTint="#128c7e"
        app:layout_constraintStart_toEndOf="@id/cvsetrika"
        app:layout_constraintTop_toBottomOf="@id/textjudul"
        android:layout_marginStart="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuci Biasa"
                android:textColor="@color/white"
                android:fontFamily="@font/interextrabold"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Layanan cuci pakaian biasa"
                android:fontFamily="@font/inter"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 15.000/kg"
                android:textColor="@color/white"
                android:fontFamily="@font/inter"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView untuk Layanan Cuci + Setrika -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cucisetrika"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:backgroundTint="#128c7e"
        app:layout_constraintTop_toBottomOf="@id/cucibiasa"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuci + Setrika"
                android:textColor="@color/white"
                android:fontFamily="@font/interextrabold"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Layanan cuci dan setrika pakaian"
                android:fontFamily="@font/inter"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 20.000/kg"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/inter"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView untuk Layanan Cuci Kilat -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cucikilat"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toBottomOf="@id/cucibiasa"
        app:layout_constraintStart_toEndOf="@id/cucisetrika"
        android:backgroundTint="#128c7e">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuci Kilat"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/interextrabold"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One Day Service, Secepat kilat"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 10.000/kg"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView untuk Paket Spesial -->
    <androidx.cardview.widget.CardView
        android:id="@+id/paketspecial"
        android:layout_width="255dp"
        android:layout_height="285dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:backgroundTint="#128c7e"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toEndOf="@id/cucibiasa"
        app:layout_constraintTop_toBottomOf="@id/textjudul">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paket Spesial"
                android:fontFamily="@font/interextrabold"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Layanan cuci + setrika + one day service"
                android:fontFamily="@font/inter"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 50.000/kg"
                android:fontFamily="@font/inter"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>