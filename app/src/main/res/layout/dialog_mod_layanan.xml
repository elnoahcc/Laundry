<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail Layanan"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/interextrabold"/>

            <!-- Service Info Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- ID Layanan -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="@string/card_layanan_id"
                        android:textSize="15sp"
                        android:textColor="#7F8C8D"
                        android:textStyle="normal"
                        android:fontFamily="@font/inter"/>

                    <TextView
                        android:id="@+id/tvDialogIdLayanan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="LY-001234"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/interextrabold"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"/>

                <!-- Nama Layanan -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="@string/card_layanan_nama"
                        android:textSize="15sp"
                        android:textColor="#7F8C8D"
                        android:fontFamily="@font/inter"/>

                    <TextView
                        android:id="@+id/tvDialogNamaLayanan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cuci Setrika"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/interextrabold"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"/>

                <!-- Harga Layanan -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="@string/harga_layanan_main_card"
                        android:textSize="15sp"
                        android:textColor="#7F8C8D"
                        android:fontFamily="@font/inter"/>

                    <TextView
                        android:id="@+id/tvDialogHargaLayanan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rp 15.000/kg"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/interextrabold"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"/>

                <!-- Cabang Layanan -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="@string/card_pelanggan_cabang"
                        android:textSize="15sp"
                        android:textColor="#7F8C8D"
                        android:fontFamily="@font/inter"/>

                    <TextView
                        android:id="@+id/tvDialogCabangLayanan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jakarta Barat"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/interextrabold"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"/>

                <!-- Status Layanan -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="@string/terdaftar_pelanggan"
                        android:textSize="15sp"
                        android:textColor="#7F8C8D"
                        android:fontFamily="@font/inter"/>

                    <TextView
                        android:id="@+id/tvDialogTanggalTerdaftar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="01/01/2024"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/interextrabold"
                        android:gravity="end" />
                </LinearLayout>
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_edit_layanan"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="@string/sunting"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:backgroundTint="#3498DB"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/interextrabold"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_delete_layanan"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="@string/Hapus"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:backgroundTint="#E74C3C"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/interextrabold"
                    android:layout_marginStart="8dp"
                    app:cornerRadius="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>