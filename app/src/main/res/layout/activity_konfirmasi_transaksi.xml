<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/main_konfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/tv_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/konfirmasidata"
                android:fontFamily="@font/interextrabold"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="8dp" />

            <View
                android:layout_width="60dp"
                android:layout_height="3dp"
                android:background="?attr/colorPrimary"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Info Pelanggan Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/informasipelanggan"
                android:fontFamily="@font/interextrabold"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="16dp" />

            <!-- Nama Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_pelanggan_nama"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:fontFamily="@font/interextrabold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_nama_pelanggan_konfirmasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:fontFamily="@font/interextrabold"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginBottom="16dp" />

            <!-- No HP Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_pelanggan_nohp"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:fontFamily="@font/interextrabold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_no_hp_konfirmasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No HP"
                    android:textSize="16sp"
                    android:fontFamily="@font/interextrabold"
                    android:textColor="?android:attr/textColorPrimary" />
            </LinearLayout>

        </LinearLayout>

        <!-- Layanan Utama Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/layanan_utama"
                android:fontFamily="@font/interextrabold"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="16dp" />

            <!-- Nama Layanan Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jenislayanan"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:fontFamily="@font/interextrabold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_nama_layanan_konfirmasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Layanan"
                    android:fontFamily="@font/interextrabold"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginBottom="16dp" />

            <!-- Harga Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/harga_layanan"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:fontFamily="@font/interextrabold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_harga_layanan_konfirmasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="@font/interextrabold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Layanan Tambahan Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/layanan_tambahan"
                android:fontFamily="@font/interextrabold"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="16dp" />

            <!-- RecyclerView Tambahan -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tambahan_konfirmasi"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical" />

        </LinearLayout>

        <!-- Total Bayar Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_button"
            android:padding="24dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/totalbayar"
                android:fontFamily="@font/interextrabold"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_total_bayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp0,00"
                android:fontFamily="@font/interextrabold"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Tombol Aksi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_batal"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/batal"
                android:fontFamily="@font/interextrabold"
                android:textStyle="bold"
                android:textSize="16sp"
                android:backgroundTint="#FF5722"
                android:textColor="@android:color/white"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pembayaran"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/Pembayaran"
                android:fontFamily="@font/interextrabold"
                android:textStyle="bold"
                android:textSize="16sp"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="@android:color/white"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>