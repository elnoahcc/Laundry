<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/CVDATA_PEGAWAI"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="16dp"
    android:layout_margin="12dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvDataIDLayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Layanan"
            android:fontFamily="@font/inter"
            />
        <TextView
            android:id="@+id/tvDataNamaLayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/interextrabold"
            android:text="Nama Layanan"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/tvDataHargaLayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="@string/card_pelanggan_nohp"
            android:textSize="16sp"
            android:paddingTop="8dp"
            />
        <TextView
            android:id="@+id/tvDataCabangLayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="Cabang"
            android:textSize="16sp"
            android:paddingTop="8dp"
            />
        <TextView
            android:id="@+id/tv_Terdaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="Terdaftar"
            android:textSize="16sp"
            android:paddingTop="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="8dp"
            >
            <Button
                android:layout_weight="1"
                android:id="@+id/btnHapus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#dc2626"
                android:padding="16dp"
                android:fontFamily="@font/inter"
                android:text="Hapus"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/btnLihat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#f59e0b"
                android:textColor="@color/white"
                android:padding="16dp"
                android:fontFamily="@font/inter"
                android:layout_marginLeft="5dp"
                android:text="@string/card_pelanggan_lihat"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
