<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp">

    <!-- Header dengan card design -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah Layanan Tambahan"
            android:fontFamily="@font/interextrabold"
            android:textSize="26sp"
            android:textAlignment="center"
            android:paddingVertical="20dp"
            android:paddingHorizontal="16dp" />
    </androidx.cardview.widget.CardView>

    <!-- Main form container untuk landscape layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/formCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="28dp"
            android:weightSum="2">

            <!-- Kolom kiri untuk input fields -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="20dp">

                <LinearLayout
                    android:id="@+id/containerNamaLayanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="28dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Layanan"
                        android:fontFamily="@font/inter"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>

                    <EditText
                        android:id="@+id/etNamaLayananTambahan"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:hint="Masukkan nama layanan tambahan"
                        android:padding="16dp"
                        android:textAlignment="textStart"
                        android:textSize="14sp"
                        android:textColor="#111827"
                        android:textColorHint="#9ca3af"
                        android:background="@drawable/rounded_et"
                        android:fontFamily="@font/inter"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerHargaLayanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Harga Layanan"
                        android:fontFamily="@font/inter"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>

                    <EditText
                        android:id="@+id/etHargaLayananTambahan"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:hint="Masukkan harga layanan tambahan"
                        android:inputType="number"
                        android:padding="16dp"
                        android:textAlignment="textStart"
                        android:textSize="14sp"
                        android:textColorHint="#9ca3af"
                        android:background="@drawable/rounded_et"
                        android:fontFamily="@font/inter"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Kolom kanan untuk button dan info tambahan -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:gravity="center">

                <!-- Info box -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="24dp"
                    android:background="#f0f9ff"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/inter"
                        android:text="ðŸ’¡ Tips"
                        android:textColor="#0369a1"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:lineSpacingExtra="2dp"
                        android:text="Pastikan nama layanan jelas dan harga sesuai dengan kualitas layanan yang diberikan"
                        android:textColor="#0369a1"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Action button -->
                <Button
                    android:id="@+id/btnSimpanTambahan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="8dp"
                    android:backgroundTint="#22c55e"
                    android:fontFamily="@font/interextrabold"
                    android:text="Simpan"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp" />


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>