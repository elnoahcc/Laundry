<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#075e54"
    android:padding="24dp">

    <!-- Background Mesin Cuci -->
    <ImageView
        android:id="@+id/bgMesinCuci"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/store"
        android:alpha="0.25"
        android:background="@drawable/rounded_et"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo Laundry -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logolaundry"
        app:layout_constraintTop_toTopOf="@id/bgMesinCuci"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Selamat Datang -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_login"
        android:textSize="34sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Subheading -->
    <TextView
        android:id="@+id/tvSubheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subheading_login"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/inter"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Input No HP -->
    <EditText
        android:id="@+id/etNohP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/card_pelanggan_nohp"
        android:inputType="phone"
        android:padding="12dp"
        android:fontFamily="@font/inter"
        android:background="@drawable/rounded_et"
        app:layout_constraintTop_toBottomOf="@id/bgMesinCuci"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Input Password -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/password_login"
        android:inputType="textPassword"
        android:padding="12dp"
        android:fontFamily="@font/inter"
        android:background="@drawable/rounded_et"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etNohP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tombol Login -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/login_login"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/inter"
        android:background="@drawable/rounded_et"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
