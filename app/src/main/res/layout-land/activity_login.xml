<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#075e54"
    android:padding="24dp">

    <!-- Background Mesin Cuci -->
    <ImageView
        android:id="@+id/bgMesinCuci"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/store"
        android:scaleType="centerCrop"
        android:alpha="0.25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etNohP"
        app:layout_constraintWidth_percent="0.5"
        android:background="@drawable/rounded_et" />

    <!-- Logo Laundry -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logolaundry"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="@id/bgMesinCuci"
        app:layout_constraintEnd_toEndOf="@id/bgMesinCuci"
        app:layout_constraintStart_margin="32dp" />

    <!-- Selamat Datang -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang"
        android:textSize="34sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintStart_toStartOf="@id/bgMesinCuci"
        app:layout_constraintEnd_toEndOf="@id/bgMesinCuci"/>

    <!-- Subheading -->
    <TextView
        android:id="@+id/tvSubheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silakan login untuk melanjutkan"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/inter"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="@id/tvWelcome"
        app:layout_constraintEnd_toEndOf="@id/tvWelcome"
        app:layout_constraintTop_margin="8dp" />

    <!-- No HP -->
    <EditText
        android:id="@+id/etNohP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="No HP"
        android:inputType="phone"
        android:padding="12dp"
        android:fontFamily="@font/inter"
        android:background="@drawable/rounded_et"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        app:layout_constraintStart_toEndOf="@id/bgMesinCuci"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45" />

    <!-- Password -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:fontFamily="@font/inter"
        android:background="@drawable/rounded_et"
        app:layout_constraintTop_toBottomOf="@id/etNohP"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/etNohP"
        app:layout_constraintEnd_toEndOf="@id/etNohP" />

    <!-- Tombol Login -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/inter"
        android:backgroundTint="#85E085"
        android:background="@drawable/rounded_et"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/etPassword"
        app:layout_constraintEnd_toEndOf="@id/etPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>
