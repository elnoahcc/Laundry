<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="#FFF4F9">

    <!-- Kiri: Data Pelanggan & Layanan Utama -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Data Pelanggan -->
        <TextView
            android:text="Data Pelanggan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:fontFamily="@font/interblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Nama Pelanggan:"
            android:fontFamily="@font/inter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="No HP:"
            android:fontFamily="@font/inter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_pilih_pelanggan"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Pilih Pelanggan"
            android:fontFamily="@font/interextrabold"
            android:textColor="#fff"
            android:backgroundTint="#4CCEFF"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button"/>

        <!-- Layanan Utama -->
        <TextView
            android:text="Layanan Utama"
            android:fontFamily="@font/interblack"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Nama Layanan:"
            android:fontFamily="@font/inter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Harga:"
            android:fontFamily="@font/inter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_pilih_layanan"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Pilih Layanan"
            android:textColor="#fff"
            android:backgroundTint="#4CCEFF"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/interextrabold"
            android:background="@drawable/rounded_button"/>
    </LinearLayout>

    <!-- Kanan: Layanan Tambahan & Tombol -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Layanan Tambahan -->
        <TextView
            android:text="Layanan Tambahan"
            android:fontFamily="@font/interblack"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_tambahan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"/>

        <!-- Tombol Tambahan dan Proses -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_tambahan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tambahan"
                android:textColor="#fff"
                android:backgroundTint="#FFC107"
                android:background="@drawable/rounded_button"/>

            <Button
                android:id="@+id/btn_proses"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Proses"
                android:textColor="#fff"
                android:backgroundTint="#4CAF50"
                android:background="@drawable/rounded_button"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
