<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Pembayaran"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/interextrabold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/subtitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pilihmetodepembayaran"
                android:textSize="14sp"
                android:fontFamily="@font/inter"
                android:textColor="?android:attr/textColorSecondary" />

        </LinearLayout>

        <!-- Payment Methods Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Primary Payment Methods -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBayarNanti"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/bayarnanti"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#FF5722"
                android:textColor="@android:color/white"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTunai"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/Tunai"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnQris"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ“± QRIS"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button" />

            <!-- Divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginVertical="16dp" />

            <!-- E-Wallet Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Wallet"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/interextrabold"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="16dp" />

            <!-- E-Wallet Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDana"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="ðŸ’Ž\nDANA"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter"
                    android:backgroundTint="#118EEA"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Material3.Button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGopay"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:text="ðŸš—\nGoPay"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter"
                    android:backgroundTint="#00AED6"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Material3.Button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOvo"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="ðŸŸ£\nOVO"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter"
                    android:backgroundTint="#4F3A96"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>