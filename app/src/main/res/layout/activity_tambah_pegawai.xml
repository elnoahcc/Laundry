<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pegawai.TambahPegawai"
    android:background="#075e54">

    <TextView
        android:id="@+id/tv_title_pegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/interblack"
        android:padding="10dp"
        android:text="TAMBAH PEGAWAI"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nama_pegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter"
        android:text="@string/card_pegawai_nama"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_pegawai" />

    <EditText
        android:id="@+id/et_nama_pegawai"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_et"
        android:fontFamily="@font/inter"
        android:hint="@string/hint_namalengkap"
        android:textColor="@color/black"
        android:autofillHints="name"
        android:textSize="14sp"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nama_pegawai" />

    <TextView
        android:id="@+id/tv_alamat_pegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter"
        android:text="@string/card_pelanggan_alamat"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_nama_pegawai" />

    <EditText
        android:id="@+id/et_alamat_pegawai"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_et"
        android:fontFamily="@font/inter"
        android:hint="@string/card_pelanggan_alamat"
        android:textColor="@color/black"
        android:autofillHints="postalAddress"
        android:textSize="14sp"
        android:inputType="textPostalAddress"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_alamat_pegawai" />

    <TextView
        android:id="@+id/tv_hp_pegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter"
        android:text="@string/card_pelanggan_nohp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_alamat_pegawai" />

    <EditText
        android:id="@+id/et_hp_pegawai"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_et"
        android:fontFamily="@font/inter"
        android:hint="@string/card_pelanggan_nohp"
        android:textColor="@color/black"
        android:autofillHints="phone"
        android:textSize="14sp"
        android:inputType="phone"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hp_pegawai" />

    <TextView
        android:id="@+id/tv_cabang_pegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter"
        android:text="@string/card_pelanggan_cabang"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_hp_pegawai" />

    <EditText
        android:id="@+id/et_cabang_pegawai"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_et"
        android:fontFamily="@font/inter"
        android:hint="@string/card_pelanggan_cabang"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:autofillHints="organization"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cabang_pegawai" />

    <Button
        android:id="@+id/btn_simpan_pegawai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/interextrabold"
        android:text="@string/button_simpan"
        android:textSize="14dp"
        android:backgroundTint="#25d366"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_cabang_pegawai" />

</androidx.constraintlayout.widget.ConstraintLayout>
