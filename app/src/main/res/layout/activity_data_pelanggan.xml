<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pelanggan.DataPelanggan">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAMBAH PELANGGAN"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:fontFamily="@font/inter"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintMarginTop="16dp"/>

    <EditText
        android:id="@+id/et_nama"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Nama Lengkap"
        android:fontFamily="@font/inter"
        android:inputType="text"
        android:padding="10dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:fontFamily="@font/inter"
        app:layout_constraintTop_toBottomOf="@id/et_nama"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintMarginTop="8dp"/>

    <EditText
        android:id="@+id/et_alamat"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Alamat"
        android:fontFamily="@font/inter"
        android:inputType="textPostalAddress"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_alamat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No HP Aktif"
        android:fontFamily="@font/inter"
        app:layout_constraintTop_toBottomOf="@id/et_alamat"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintMarginTop="8dp"/>

    <EditText
        android:id="@+id/et_hp"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="No HP Aktif"
        android:fontFamily="@font/inter"
        android:inputType="phone"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_hp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_simpan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:layout_margin="10dp"
        android:fontFamily="@font/inter"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/et_hp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>